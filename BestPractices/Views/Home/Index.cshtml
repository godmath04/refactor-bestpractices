@model HomeViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @ViewBag.ErrorMessage
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Color</th>
                <th>Fuel (Gallons)</th>
                <th>Engine Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model.Vehicles)
            {
                <tr>
                    <td>
                        <small>@vehicle.Id.ToString().Substring(0, 8)...</small>
                    </td>
                    <td>
                        @(vehicle.GetType().Name)
                    </td>
                    <td>
                        @vehicle.Brand
                    </td>
                    <td>
                        @vehicle.Model
                    </td>
                    <td>
                        @vehicle.Color
                    </td>
                    <td>
                        @vehicle.Gas.ToString("N1") / @vehicle.FuelLimit.ToString("N1")
                    </td>
                    <td>
                        @if (vehicle.IsEngineOn())
                        {
                            <span class="badge badge-success">Running</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Stopped</span>
                        }
                    </td>
                    <td>
                        @if (vehicle.IsEngineOn())
                        {
                            <a href="/Home/StopEngine?id=@vehicle.Id" class="btn btn-sm btn-warning">Stop Engine</a>
                        }
                        else
                        {
                            <a href="/Home/StartEngine?id=@vehicle.Id" class="btn btn-sm btn-success">Start Engine</a>
                        }

                        <a href="/Home/AddGas?id=@vehicle.Id" class="btn btn-sm btn-primary">Add Fuel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a href="/Home/AddMustang" class="btn btn-danger">Add Ford Mustang</a>
        <a href="/Home/AddExplorer" class="btn btn-dark">Add Ford Explorer</a>
    </div>
</div>
